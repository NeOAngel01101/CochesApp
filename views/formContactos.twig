{% extends "layout.twig" %}

{% block content %}

<div class="container_contacto" >
    <h1 align="center">{{ webInfo.h1 }}</h1>
    <div class="well well-sm">
        <form method="post">
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group{%  if errors['nombrecontacto'] %}has-error{% endif %}">
                    <label for="nombrecontacto">Nombre</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="text" class="form-control" id="nombrecontacto" name="nombrecontacto" placeholder="Introduzca su nombre" value="{{ contacto.nombrecontacto }}"></div>
                    </div>
                    {{ generateAlert(errors, 'nombrecontacto') }}

                    <div class="form-group"{%  if errors['emailcontacto'] %}has-error{% endif %}">
                    <label for="emailcontacto">Correo Electronico</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                        <input type="email" class="form-control" id="emailcontacto" name="emailcontacto" placeholder="Introduzca su correo" value="{{ contacto.emailcontacto }}"></div>
                    </div>
                    {{ generateAlert(errors, 'emailcontacto') }}

                    <div class="form-group">
                        <label for="telefonocontacto">Telefono(Opcional)</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                            <input type="text" class="form-control" id="telefonocontacto" name="telefonocontacto" placeholder="Introduzca su telefono" value="{{ contacto.telefonocontacto }}"></div>
                    </div>

                    <div class="form-group{%  if errors['mensajecontacto'] %}has-error{% endif %}">
                    <label for="mensajecontacto">Mensaje</label>
                    <textarea name="mensajecontacto" id="mensajecontacto" class="form-control" rows="9" cols="25"
                              placeholder="Escribe su duda">{{ contacto.mensajecontacto }}</textarea>
                    </div>
                    {{ generateAlert(errors, 'mensajecontacto') }}

                <input type="hidden" name="_method" value="{{ webInfo.method }}">
                <button type="submit" class="btn btn-default">{{ webInfo.submit }}</button>
            </div>

        <div class="col-md-6">
